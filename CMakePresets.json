{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "vendor": {
                "qt.io/QtCreator/1.0": {
                    "AskBeforePresetsReload": true,
                    "AskReConfigureInitialParams": false,
                    "AutorunCMake": false,
                    "PackageManagerAutoSetup": false,
                    "ShowAdvancedOptionsByDefault": true,
                    "ShowSourceSubFolders": false,
                    "UseJunctionsForSourceAndBuildDirectories": true
                }
            }
        },
        {
            "name": "homebrew-darwin",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "$env{HOMEBREW_PREFIX}/opt/llvm/bin/clang",
                "CMAKE_CXX_COMPILER": "$env{HOMEBREW_PREFIX}/opt/llvm/bin/clang++",
                "CMAKE_PREFIX_PATH": "$env{HOMEBREW_PREFIX}/lib/cmake"
            },
            "environment": {
                "LD_LIBRARY_PATH": "$env{HOMEBREW_PREFIX}/opt/llvm/lib:$env{HOMEBREW_PREFIX}/opt/boost/lib:$env{HOMEBREW_PREFIX}/opt/openssl@3/lib"
            }
        },
        {
            "name": "darwin-sdk",
            "hidden": true,
            "environment": {
                "SDKROOT": "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk"
            }
        },
        {
            "name": "debug-darwin",
            "inherits": [
                "common",
                "darwin-sdk"
            ],
            "cacheVariables": {
                "CMAKE_LINKER_TYPE": "LLD",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "debug-darwin-homebrew",
            "inherits": [
                "common",
                "darwin-sdk",
                "homebrew-darwin"
            ],
            "cacheVariables": {
                "CMAKE_LINKER_TYPE": "LLD",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "debug",
            "inherits": [
                "common"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-darwin",
            "configurePreset": "debug-darwin"
        },
        {
            "name": "debug-darwin-homebrew",
            "configurePreset": "debug-darwin-homebrew"
        },
        {
            "name": "debug",
            "configurePreset": "debug"
        }
    ]
}